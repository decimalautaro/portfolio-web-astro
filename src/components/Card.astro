---
interface Props {
  title: string;
  body: string;
  href: string;
}

const { href, title, body } = Astro.props;
---

<li class="link-card">
  <a href={href}>
    <h2>
      {title}
      <span>&rarr;</span>
    </h2>
    <p>
      {body}
    </p>
  </a>
</li>
<style>
  .link-card {
    list-style: none;
    display: flex;
    padding: 1px;
    background-color: #23262d;
    background-image: none;
    background-size: 400%;
    border-radius: 7px;
    background-position: 100%;
    transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
  }
  .link-card > a {
    width: 100%;
    text-decoration: none;
    line-height: 1.4;
    padding: 1rem; /* Ajustado para pantallas pequeñas */
    border-radius: 8px;
    color: white;
    background-color: #23262d;
    opacity: 0.9; /* Ligera mejora en la visibilidad */
  }
  h2 {
    margin: 0;
    font-size: 1rem; /* Reducido para pantallas pequeñas */
    transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
  }
  p {
    margin-top: 0.5rem;
    margin-bottom: 0;
    font-size: 0.875rem; /* Ajustado para pantallas pequeñas */
  }
  .link-card:is(:hover, :focus-within) {
    background-position: 0;
    background-image: var(--accent-gradient);
  }
  .link-card:is(:hover, :focus-within) h2 {
    color: rgb(var(--accent-light));
  }

  /* Responsive adjustments */
  @media (min-width: 768px) {
    h2 {
      font-size: 1.25rem; /* Tamaño mayor para pantallas medianas */
    }
    p {
      font-size: 1rem; /* Tamaño mayor para pantallas medianas */
    }
    .link-card > a {
      padding: calc(1.5rem - 1px); /* Padding mayor en pantallas medianas */
    }
  }
</style>
