---
import Layout from "../layouts/Layout.astro";
import Badge from "../components/Badge.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Experience from "../components/Experience.astro";
import LinkedInIcon from "../icons/LinkedIn.astro";
import GitHubIcon from "../icons/GitHub.astro";
import MailIcon from "../icons/Mail.astro";
import Briefcase from "../icons/Briefcase.astro";
import CodeIcon from "../icons/Code.astro";
import UserProfileIcon from "../icons/UserProfile.astro";
import SocialPill from "../components/SocialPill.astro";
import Projects from "../components/Projects.astro";
import AboutMe from "../components/AboutMe.astro";
---

<Layout
  title="Porfolio Lautaro Décima - Desarrollador Full Stack"
  description="Contrata a Lautaro Décima para crear tu aplicacion web."
>
  <main class="px-4">
    <SectionContainer
      class="py-20 md:py-44 pb-16 md:pb-32 text-center md:text-left"
    >
      <img
        class="rounded-full w-32 h-32 md:w-48 md:h-48 mx-auto md:mx-0 mb-4"
        src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcT7Z5XPeQmFv4V2iGYn6hsT-e0D8o4NtlUXeQ&s"
        alt="foto perfil"
      />
      <h1
        class="text-white text-2xl md:text-4xl lg:text-5xl font-bold flex flex-col md:flex-row gap-y-4 md:gap-x-4 pb-4 md:pb-10"
      >
        Hola, soy Lautaro Décima
        <a
          href="http://linkedin.com/in/lautarodecima"
          target="_blank"
          rel="noopener"
          class="flex justify-center items-center"
        >
          <Badge>Disponible para trabajar</Badge>
        </a>
      </h1>
      <h2
        class="text-lg md:text-xl lg:text-2xl text-wrap max-w-[90%] md:max-w-[700px] mx-auto md:mx-0"
      >
        <span class="text-yellow-200/90">Desarrollador Full Stack</span> de Mendoza,
        Argentina, con un enfoque especializado en
        <span class="text-yellow-200/90">Desarrollo Back end.</span>
        <span>
          <br />
          Cuento con 2 años y medio de experiencia en proyectos de desarrollo, donde
          he contribuido significativamente en la creación y optimización de sistemas
          y aplicaciones.
        </span>
      </h2>

      <nav
        class="flex flex-col md:flex-row gap-4 mt-8 flex-wrap justify-center md:justify-start"
      >
        <SectionContainer id="experience" class="scroll-mt-32">
          <h2
            class="text-2xl md:text-3xl font-semibold mb-6 flex gap-x-3 items-center justify-center md:justify-start"
          >
            Experiencia laboral
          </h2>
          <Experience />
        </SectionContainer>

        <SectionContainer id="projects" class="scroll-mt-32">
          <h2
            class="text-2xl md:text-3xl font-semibold mb-6 flex gap-x-3 items-center justify-center md:justify-start"
          >
            Proyectos
          </h2>
          <Projects />
        </SectionContainer>

        <SectionContainer id="about" class="scroll-mt-32">
          <h2
            class="text-2xl md:text-3xl font-semibold mb-6 flex gap-x-3 items-center justify-center md:justify-start"
          >
            Sobre mi
          </h2>
          <AboutMe />
        </SectionContainer>
      </nav>
    </SectionContainer>
  </main>
</Layout>
